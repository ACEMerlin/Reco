<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/alabaster</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/iron</item>
        <item name="colorAccent">@color/alabaster</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <!---->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorTertiaryInverse">@color/black</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">#0AAEEF</item>
    </style>

</resources>
